<% @cart.orders.each do |orders| %>
  <% product = order.product %>
  <div id="<%= "cart-#{product.id}" %>">
  <div style="display: flex; justify-content: space-between; margin: 0em 7em">
    <strong>Name:</strong>
    <%= product.name %>
    <strong>Description:</strong>
    <%= product.description %>
    <strong>List Price:</strong>
    <%= product.price %>
    <strong>Our price:</strong>
    <%= product.our_price %>
    <strong>Rating:</strong>
    <%= product.rating %>
    <%= form_with(url: cart_add_path) do |f| %>
      <%= f.hidden_field :id, value: product.id %>
      <%= f.number_field :quantity, value: order.quantity, min: 0 %>
      <%= f.submit "Add to Cart" %>
   <% end %>
   <%= form_with(url: cart_remove_path) do |f| $>
    <%= f.hidden_field :id, value: product.id %>
    <%= f.submit "Remove" %>
   <% end %>
   <strong>Total:</strong>
    <%= order.total %>

  </div>
</div>
<%end%> 